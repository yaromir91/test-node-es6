{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": [2, "tab"],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"]
  }
}